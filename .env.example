# ========================================
# Biodiversity Encyclopedia - Environment Variables
# ========================================
# Copy this file to .env and update with your actual values
# ðŸ“‹ See DATABASE_GUIDE.md for detailed setup instructions

# ========================================
# Database Configuration (Supabase)
# ========================================

# Local Development (default)
# Get these values from: supabase start
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_local_anon_key_from_supabase_start
SUPABASE_SERVICE_ROLE_KEY=your_local_service_role_key_from_supabase_start
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Remote Development (uncomment and replace for remote setup)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_remote_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_remote_service_role_key
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# Supabase CLI Configuration
SUPABASE_PROJECT_ID=your_local_project_id
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# ========================================
# Authentication
# ========================================

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# ========================================
# Application Configuration
# ========================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# ========================================
# File & Image Storage
# ========================================

# Image Upload Configuration
NEXT_PUBLIC_IMAGE_UPLOAD_ENABLED=true
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ========================================
# External Services (Optional)
# ========================================

# Stripe Payments (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI API (for AI features like species identification)
OPENAI_API_KEY=sk_your_openai_api_key

# Google Maps (for habitat maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Service (if not using Supabase email)
RESEND_API_KEY=re_your_resend_api_key
NEXT_PUBLIC_FROM_EMAIL=noreply@yourdomain.com

# Groq (for AI tooling such as generative text helpers)
GROQ_API_KEY=groq_test_your_api_key

# ========================================
# Development Tools
# ========================================

# Analytics & Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_for_error_tracking
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Social Authentication (Optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ========================================
# Security Configuration
# ========================================

# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# ========================================
# Production Only (Uncomment for Production)
# ========================================

# Production Database
# NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key
# DATABASE_URL=postgresql://postgres:[PROD-PASSWORD]@db.your-production-project.supabase.co:5432/postgres

# Production URLs
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Production Features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_LOG_LEVEL=error

# Production Security
# NEXT_PUBLIC_ALLOWED_ORIGINS=https://yourdomain.com
# NEXTAUTH_URL=https://yourdomain.com

